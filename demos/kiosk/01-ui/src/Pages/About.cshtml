@page
<style>
a.demoTitleLink:link {color: #11111194; }
a.demoTitleLink:visited {color: #11111194;}
a.demoTitleLink:hover {color: #f08632; text-decoration: underline; }
a.demoTitleLink:active {color: #11111194;}

a.demoLink:link {color: #000; }
a.demoLink:visited {color: #000;}
a.demoLink:hover {color: #f08632;}
a.demoLink:active {color: #000;}
</style>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>About</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/">Home</a>
                    <span>About</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- About Section Begin -->
<section class="about spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about__text">
                    <div class="section-title">
                        <span>Progress Chef Edge Management Solution</span>
                        <h4>Kiosk Demo</h4>
                    </div>
                    <p>The "Kiosk Demo" simulates a self service ordering kiosk distributed accross three (3) locations with multiple (1-2) devices per location.                        
                    </p>
                    <ul>
                        <li>Store #1 contains two (2) Kiosks and is a corporate location</li>
                        <li>Store #2 contains one (1) Kiosks and is a corporate location</li>
                        <li>Store #3 contains two (2) Kiosks and is a partner/francise location</li>
                    </ul>
                </div>
            </div>            
        </div>

        <div class="row">
            <div class="col-lg-12">
                <img src="img/about/overview.jpg" />
            </div>
        </div>
    </div>
</section>
<!-- About Section End -->

<!-- Testimonial Section Begin -->
<section class="testimonial spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-title">
                    <span>Features</span>
                    <h2>Available Demos</h2>
                </div>
            </div>
        </div>
        <div class="row" id="demoRow">
        </div>
    </div>
</section>
<!-- Testimonial Section End -->

<!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <div class="col-lg-12">
                    <div class="blog__details__content">                    
                        <div class="blog__details__comment" id="serviceRow">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Blog Details Section End -->
<div style="height:40px"></div>

<script id="demoTemplate" type="text/x-jsrender">
  <div class="testimonial__slider owl-carousel">
    {{for items}}
        <div class="col-lg-12">
            <div class="testimonial__item">
                <div class="testimonial__author">
                    <div class="testimonial__author__pic">
                        <h1><a href="Demo-{{:id}}" class="demoTitleLink">{{:id}}</a></h1>
                    </div>
                    <div class="testimonial__author__text">
                        <h5>{{:title}}</h5>
                        <span>{{:time}}</span>                    
                    </div>
                </div>
                <div class="rating">
                    <a class="demoLink" href="Demo-{{:id}}"><i class="fa fa-info fa-3x" aria-hidden="true"></i></a>
                </div>                    
                <p>{{:description}}</p>
            </div>
        </div>
    {{/for}}          
</div>
</script>

<script id="serviceTemplate" type="text/x-jsrender">
<h5>Services</h5>
{{for items}}
    <div class="blog__details__comment__item">
        <div class="blog__details__comment__item__pic">
            <h1>{{:id}}</h1>
        </div>
        <div class="blog__details__comment__item__text">
            <h6>{{:title}}</h6>
            <span>{{:language}}</span>
            <p>{{:description}}</p>
            <div class="blog__details__comment__btns">
                {{for tags}}
                <a href="#">{{>#data}}</a>
                {{/for}}     
            </div>
        </div>
    </div>    
{{/for}}     
</script>
