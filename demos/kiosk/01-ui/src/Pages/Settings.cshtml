@page

<style>.contact__address__item .row {min-height: 40px; height: 40xp;}</style>

<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__text">
                    <h2>Store Configuration</h2>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="breadcrumb__links">
                    <a href="/">Home</a>
                    <span>Setting</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="contact__address">
            <div class="row">
                <div class="col-lg-4">
                    <div class="contact__address__item">
                        <h6>Store Settings</h6>
                        <div class="row">
                            <div class="col-lg-6">Store ID</div>
                            <div class="col-lg-6" id="store-id-cfg">___</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">Catalog</div>
                            <div class="col-lg-6" id="store-catalog-cfg">___</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">Tax Rate</div>
                            <div class="col-lg-6" id="store-tax-cfg">___</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">Discount</div>
                            <div class="col-lg-6" id="store-disc-cfg">___</div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="contact__address__item" id="couponList">
                    </div>
                </div>                
                <div class="col-lg-4">
                    <div class="contact__address__item">
                        <h6>Settings</h6>
                        <form action="#" id="updateSettingsForm">
                            <div class="row">
                                <div class="col-lg-6">Store ID</div>
                                <div class="col-lg-6">
                                    <input type="text" id="txtStoreID" placeholder="Store ID">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">Catalog</div>
                                <div class="col-lg-6">                                    
                                    <select id="ddCatalog"> 
                                        <option value="all">All</option>
                                        <option value="custom">Custom</option>
                                        <option value="default">Default</option>
                                        <option value="savory">Savory</option>
                                        <option value="sweet">Sweet</option>
                                        <option value="error">Intentional Error</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">Tax Rate</div>
                                <div class="col-lg-6">
                                    <input type="text" id="txtTaxRate" placeholder="Tax Rate">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">Discounts</div>
                                <div class="col-lg-6">
                                    <select id="ddDiscounts" >
                                        <option value="true">Enabled</option>
                                        <option value="false">Disabled</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="padding-top:20px">                                    
                                    <button type="submit" class="site-btn" style="display: none">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
 <script id="couponTemplate" type="text/x-jsrender">
    <h6>Discount Codes</h6>
    {{for codes}}
    <div class="row">
        <div class="col-lg-6">{{:code}}</div>
        <div class="col-lg-6">{{:amount}}</div>
    </div> 
    {{/for}}                        
</script>